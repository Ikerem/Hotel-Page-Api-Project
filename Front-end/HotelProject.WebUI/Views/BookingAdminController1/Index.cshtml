@model List<ResulBookingDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
    int count = 0;
}



     
           
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Misafir</th>
                            <th>Giriş Tarihi</th>
                            <th>Çıkış Tarihi</th>
                <th>Durum</th>
                <th>Onayla</th>
                <th>İpatal Et</th>
                <th>Beklet</th>
                <th>Güncelle</th>
                <th>Detaylar</th>
                        </tr>
                    </thead>  
                        <tbody>
                    @foreach (var item in Model)
                    {

                            count++;
                            <tr>
                            <th>@count</th>
                            <td>@item.Name</td>
                                <td>@(((DateTime)  item.checkin).ToString("dd-Mm-yyyy"))</td>
                    <td>@(((DateTime)  item.checkOut).ToString("dd-MM-yyyy"))</td>
                           
                           
                            <td >
                                <span class=" badge badge-primary px-2">@item.Statues"> </span>

                                </td>
                                <td >
                        <a href="/BookingAdminController1/ApprovedReservation/@item.Bookingid" class="btn btn-outline-success">Onayla</a>
                                </td>
                                <td>
                                    <a href="" class="btn btn-outline-danger">İptal Et</a>
                                </td>
                                <td>
                                    <a href="" class="btn btn-outline-warning">Beklet</a>
                                </td>
                                <td>
                                    <a href="" class="btn btn-outline-info">Güncelle</a>
                                </td>
                                <td>
                                    <a href="" class="btn btn-outline-dark">Detaylar</a>
                                </td>
                        </tr>
                     
                    }
                    </tbody>
                </table>
            </div>
   



