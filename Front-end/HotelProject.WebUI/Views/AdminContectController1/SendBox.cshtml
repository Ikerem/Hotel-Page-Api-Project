@model List<SendBoxDto>
@{
    ViewData["Title"] = "SendBox";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
}


<div class="email-left-box">
    <a href="/AdminContectController1/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
    @await Html.PartialAsync("SidebarAdminContectPartial");
    <h5 class="mt-5 m-b-10">Kategoriler</h5>
    @await Html.PartialAsync("SidebarAdminContectCategoryPartial");
</div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-primary btn-block" type="button">
                Gönderilen Mesajlar Mesajlar  <span class="caret m-l-5"></span>
            </button>

        </div>
    </div>
    <div class="email-list m-t-15">
        @foreach (var item in Model)
        {


            <div class="message">
                <a href="/AdminContectController1/MessageDetailsBySendBox/@item.SendMessageid">
                    <div class="col-mail col-mail-1">
                        <div class="email-checkbox">
                            <input type="checkbox" id="chk2">
                            <label class="toggle" for="chk2"></label>
                        </div><span class="star-toggle ti-star"></span>
                    </div>
                    <div class="col-mail col-mail-2">
                        <div class="subject"><b>Gönderici Adı: @item.ReciverName</b>,<b>Konu:@item.title</b>,@item.Content.Substring(0,20)...</div>
                        <div class="date">@item.Date.ToString("dd-MM-yyyy")</div>
                    </div>
                </a>
            </div>
        }


    </div>
    <!-- panel -->

</div>

