@model GetMessageByidDto
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
}

<div class="email-left-box">
<a href="/AdminContectController1/AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
@await Html.PartialAsync("SidebarAdminContectPartial");
<h5 class="mt-5 m-b-10">Kategoriler</h5>
@await Html.PartialAsync("SidebarAdminContectCategoryPartial");
            </div>
<div class="email-right-box">
    <div role="toolbar" class="toolbar">
        <div class="btn-group">
            <button aria-expanded="false" data-toggle="dropdown" class="btn btn-primary btn-block" type="button">
                Gelen Mesajlar  <span class="caret m-l-5"></span>
            </button>

        </div>
    </div>
    <div class="read-content">
        <div class="media pt-5">
            <img class="mr-3 rounded-circle" src="images/avatar/1.jpg">
            <div class="media-body">
                <h5 class="m-b-3">@Model.SenderName</h5>
                <p class="m-b-2">@Model.Date.ToString("dd-MM-yyyy")</p>
            </div>

        </div>
        <hr>
        <div class="media mb-4 mt-1">
            <div class="media-body">
            
                <h4 class="m-0 text-primary">@Model.title</h4><small class="text-muted">Kime:@Model.ReciverMail</small>
            </div>
        </div>
        <h5 class="m-b-15">Merhaba</h5>
        <p> @Model.Content</p>
      
        
        <h5 class="m-b-5 p-t-15">@Model.SenderName</h5>
   
     
        <div class="form-group p-t-15">
            <textarea class="w-100 p-20 l-border-1" name="" id="" cols="30" rows="5" placeholder="It's really an amazing.I want to know more about it..!"></textarea>
        </div>
    </div>
</div>

