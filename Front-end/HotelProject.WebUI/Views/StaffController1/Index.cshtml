@model List<StaffViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Personel Adı</th>
        <th>Personel Ünvan</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Staffid</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td> <a href="/StaffController1/DeleteStaff/@item.Staffid" class="btn btn-danger">Sil</a>  </td>
            <td> <a href="/StaffController1/updateStaff/@item.Staffid" class="btn btn-success">Güncelle</a>  </td>
            <td> <a href="xd" class="btn btn-dark">Detaylar</a>  </td>

        </tr>
        
    }
</table>
<a href="/StaffController1/AddStaff/" class="btn btn-info">Yeni Personel</a>

