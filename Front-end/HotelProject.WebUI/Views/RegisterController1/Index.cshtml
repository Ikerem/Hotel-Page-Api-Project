@model CreatNewUserDto
@{
    Layout = null;
}
<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>KAYIT OL</title>
    <!-- Favicon icon -->
  
    <link rel="icon" type="~/quixlab-main/image/png" sizes="16x16" href="~/quixlab-main/theme/images/favicon.png" /">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">

    <link href="~/quixlab-main/theme/css/style.css" rel="stylesheet" />
</head>

<body class="h-100">


    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-5">
                                <a class="text-center" href=""> <h2>Kayıt Sayfası</h2></a>

                                <form class="mt-5 mb-5 login-input" method="post">
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Ad" asp-for="Name">
                                        <span asp-validation-for="Name"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Soyad" asp-for="SurName">
                                        <span asp-validation-for="SurName"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Kullanıcı Adı" asp-for="UserName">
                                        <span asp-validation-for="UserName"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="email" class="form-control" placeholder="Mail" asp-for="Mail">
                                        <span asp-validation-for="Mail"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Sifre" asp-for="Sifre">
                                        <span asp-validation-for="Sifre"></span>
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Sifre Tekrar" asp-for="SifreTekrar">
                                        <span asp-validation-for="SifreTekrar"></span>
                                    </div>

                                    <button class="btn login-form__btn submit w-100">Sign in</button>
                                </form>
                                <p class="mt-5 login-form__footer">Have account <a href="/LoginController1/Index" class="text-primary">Giriş Yap </a> Hemen</p>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>





    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/quixlab-main/plugins/common/common.min.js"></script>
    <script src="~/quixlab-main/js/custom.min.js"></script>
    <script src="~/quixlab-main/js/settings.js"></script>
    <script src="~/quixlab-main/js/gleek.js"></script>
    <script src="~/quixlab-main/js/styleSwitcher.js"></script>
</body>
</html>


