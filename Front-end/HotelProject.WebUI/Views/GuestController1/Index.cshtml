@model List<ResultGuestDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Müşteri Adı</th>
        <th>Müşteri Soyadı</th>
        <th>Şehir</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Guestid</th>
            <td>@item.Name</td>
            <td>@item.Surname</td>
            <td>@item.City</td>
            <td> <a href="/GuestController1/DeleteGuest/@item.Guestid" class="btn btn-danger">Sil</a>  </td>
            <td> <a href="/GuestController1/updateGuest/@item.Guestid" class="btn btn-success">Güncelle</a>  </td>
            <td> <a href="xd" class="btn btn-dark">Detaylar</a>  </td>

        </tr>

    }
</table>
<a href="/GuestController1/AddGuestDto/" class="btn btn-info">Yeni Müşteri</a>


