@model List<TestimonialViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/_AdmniLayout.cshtml";
}

<table class="table table-bordered">

    <tr>
        <th>ID</th>
        <th>Referans Adı</th>
        <th>Referans Ünvan</th>
        <th>Referans Görsel</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>

    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.Testimonialid</th>
            <td>@item.Name</td>
            <td>@item.Title</td>
            <td>@item.Img</td>
            <td> <a href="/StaffController1/DeleteStaff/@item.Testimonialid" class="btn btn-danger">Sil</a>  </td>
            <td> <a href="/StaffController1/updateStaff/@item.Testimonialid" class="btn btn-success">Güncelle</a>  </td>
         

        </tr>

    }
</table>
<a href="/StaffController1/AddStaff/" class="btn btn-info">Yeni Personel</a>

